	func (v *{{.TypeName}}) ErrorLater(ctx context.Context) ({{.GoType}}, bool) {
		if v.request.err != nil {
			return {{.Zero}}, false
		}

		if v.executed {
			return v.value, !v.isNull
		}

		if err := v.request.Execute(ctx); err != nil {
			return {{.Zero}}, false
		}

		return v.value, !v.isNull
	}
